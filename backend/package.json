{
  "name": "gofera-backend",
  "version": "1.0.0",
  "description": "Backend API for Gofera ride-sharing platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:db": "node test-db-connection.js",
    "test": "npm run test:db && jest --detectOpenHandles --forceExit --verbose",
    "test:watch": "npm run test:db && jest --watch --detectOpenHandles --forceExit",
    "test:coverage": "npm run test:db && jest --coverage --detectOpenHandles --forceExit",
    "gen:vapid": "node -e \"const w=require('web-push');const k=w.generateVAPIDKeys();console.log(k)\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "validator": "^13.11.0",
    "web-push": "^3.6.7",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ride-sharing",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Gofera Team",
  "license": "MIT"
}
